{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "public/dist/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": []
    },
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": false
    },
    "format": {
      "cache": true
    },
    "format:fix": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "shell": {
      "cache": false,
      "persistent": true
    },
    "train": {
      "cache": false,
      "persistent": true
    },
    "visualize": {
      "cache": false,
      "persistent": true
    }
  }
}
